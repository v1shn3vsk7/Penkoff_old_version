@model Penkoff.Storage.Entities.User;

<body>
    <a class="h1" asp-action="Index" asp-controller="home">Penkoff</a>

    <div class="loginbox">
        <div id="rectangle"></div>
        <form asp-action="login" asp-controller="Home">
            <h2>Sign in</h2>

            <p>
                <input required type="text" placeholder="Login:" asp-for="Login" />
            </p>

            <p>
                <input required type="text" placeholder="Password:" asp-for="Password" />
            </p>

            <p>
                <input type="submit" value="Log in" class="submit_button" />
            </p>

            <h3>Don't have an account?</h3>
            <a class="nav_link" asp-action="SignUpPage" asp-controller="SignUp">Sign up</a>
        </form>
    </div>

    <div class="tmp">
    <h4>©2022 Penkoff, Moscow, Akademika Scriabin Street 25/1 building 4</h4>
    </div>
    
    <style>
.h1 {
    position: absolute;
    width: 119px;
    height: 50px;
    left: 700px;
    top: 50px;
    font-family: 'SF Pro Display';
    font-style: normal;
    font-weight: 400;
    font-size: 36px;
    line-height: 43px;
    color: #176FFA;
}

h2 {
    position: relative;
    left: 0%;
    font-family: 'SF Pro Display';
    font-style: normal;
    font-weight: 300;
    font-size: 30px;
    line-height: 43px;
    color: #000000;
}

h3 {
    position: relative;
    margin: 0;
    padding: 0 0 20px;
    text-align: center;
    top: -45px;
    left: -10%;
    font-family: 'SF Pro Display';
    font-style: normal;
    font-weight: 400;
    font-size: 20px;
    line-height: 30px;
    color: #000000;
}

.loginbox {
    width: 400px;
    height: 300px;
    background: #FFFFFF;
    top: 50%;
    left: 50%;
    position: absolute;
    transform: translate(-50%, -50%);
    box-sizing: border-box;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 30px;
}

.loginbox input[type="text"],
input[type="password"] {
    position: relative;
    left: 0%;
    width: 90%;
    margin-bottom: 20px;
    background: transparent;
    outline: none;
    height: 40px;
    color: #3F3F3F;
    font-size: 16px;
    border: 1px solid rgba(0, 0, 0, 0.4);
    box-sizing: border-box;
    border-radius: 12px;
}

.submit_button {
    display: inline-block;
    padding: 1.25rem 1.25rem;
    border-radius: 10rem;
    color: #fff;
    font-size: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    letter-spacing: 0.15rem;
    transition: all 0.3s;
    position: relative;
    left: 37%;
    overflow: hidden;
    z-index: 1;
    width: 60px;
    height: 3px;
}

    .submit_button:after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #176FFA;
        border-radius: 10rem;
        z-index: -2;
    }

    .submit_button:before {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0%;
        height: 100%;
        background-color: #16E3FA;
        transition: all 0.4s;
        border-radius: 10rem;
        z-index: -1;
    }

    .submit_button:hover {
        color: #fff;
    }

        .submit_button:hover:before {
            width: 100%;
        }

/* optional reset for presentation */
* {
    font-family: 'SF Pro Display';
    text-decoration: none;
    font-size: 16px;
}

.container {
    padding-top: 50px;
    margin: 0 auto;
    width: 100%;
    text-align: center;
}

span {
    display: block;
    margin-top: 2rem;
    font-size: 0.7rem;
    color: #777;
}

/* Sign up reference*/
.nav_link {
    position: absolute;
    left: 67%;
    top: 88%;
    /*display: inline-block; */
    /*vertical-align: top; */
    color: #828892;
    text-decoration: none;
    font-size: 20px;
    transition: color .2s linear;
}

.nav_link:hover {
    color: #16FAEA;
}

.tmp {
    position: absolute;
    top: 92%;
    left: 30%;
    display: inline;
    font-family: 'SF Pro Display';
    font-style: normal;
    font-weight: 300;
    text-align: center;
    font-size: 15px;
    line-height: normal;
    width: 600px;
    color: #9B9B9B;
}


    </style>

</body>
