<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<header class="header">
        <div class="container">
            <div class="header_inner">
                <div class="header_logo">PENKOFF</div>

                <nav>
                    <a class="nav_link" asp-action="Services" asp-controller="home">Services</a>
                    <a class="nav_link" href="#">My cards</a>
                    <a class="nav_link" href="#">Stocks</a>
                    <a class="nav_link" asp-action="Account" asp-controller="home">My account</a>
                </nav>
                
            </div>
        </div>
    </header>

    <style>
body {
    margin: 0;
    font-family: 'SF Pro Display';
    font-size: 14px;
    line-height: 1.6;
    background-color: #FBFBFB;
    color: #176FFA
}

.container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
}

.intro {
    width: 100%;
    height: 100vh;
    background-color: #FBFBFB;
}

.header {
    width: 100%;
    position: absolute;
    top: 10px;
    right: 0;
    left: 0;
    z-index: 1000;
}

.header_inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.header_logo {
    font-family: 'Pragmatica';
    font-size: 34px;
    font-weight: 800;
}

.nav {
    font-size: 30px;
}

.nav_link {
    display: inline-block;
    vertical-align: top;
    margin: 0 50px;
    color: #5C5757;
    text-decoration: none;
    font-size: 22px;
    transition: color .2s linear;
}

.nav_link:hover {
    color: #16FAEA;
}
    </style>

<body>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
